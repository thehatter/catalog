<p>
  <h3><%= @firm.name %></h3>
</p>

<p>
  <%= @firm.description %>
</p>


<br><br>

<ul>
<% @addresses.each do |addresses| %>
  <li><%= addresses.line_1 %></li>
    <ul>
    <% addresses.phones.each do |phone| %>
      <li><%= phone.number %></li>
    <% end %>
    </ul>
<% end %>
</ul>

<ul>
<% @galleries.each do |gallery| %>

  <li>
    <%= image_tag(gallery.image_url(:thumb)) %><br>
    <%= gallery.title %>
  </li>
<% end %>
</ul>

<%= image_tag(@firm.favatar_url(:thumb)) if @firm.favatar_url %>

